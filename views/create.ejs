<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
         body{background-color: hsl(0, 0%, 70%);}
        .form-cont{width: 60%; margin: 5%; padding:5%; background-color: hsl(0, 0%, 80%); border-radius: 25px;}
        #hoverTxt{display: none;}
    </style>
    <title>Register</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('navbar-out.ejs'); -%>
    <script> document.querySelector('#nav-create').classList.add("active"); </script>


    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="form-cont">
            <div class="d-flex justify-content-center flex-column align-items-center h-100">
                <h1 class="mb-3">Register Account</h1>
                <h4 class="mb-3">Account Name</h4>
            </div>
            <form action="/posted" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="InputUname">Username</label>
                    <input type="text" class="form-control" name="InputUname" placeholder="Enter Username" minlength="3" maxlength="30" required>
                </div>
                <div class="form-group">
                    <label for="InputFname">Full name</label>
                    <input type="text" class="form-control" name="InputFname" placeholder="Enter Full Name" minlength="3" maxlength="30" required>
                </div>     
                <div class="form-group">
                    <label for="InputBday">Birthday</label>
                    <input type="date" class="form-control" name="InputBday" placeholder="Enter Birthday" required>
                </div>           
                <div class="form-group">
                    <label for="InputPass">Password</label>
                    <input type="password" class="form-control" id="Pass" name="InputPass" placeholder="Enter Password" minlength="3" maxlength="15" required >
                </div>
                <div class="form-group">
                    <label for="InputRepPass">Repeat Password</label>
                    <input type="password" class="form-control" id="RepPass" name="InputRepPass" onchange="matchPassword();" placeholder="Repeat Password" minlength="3" maxlength="15" required>
                </div>
                <div class="form-group">
                    <label for="FormControlFile">Upload Profile Picture</label>
                    <input type="file" class="form-control-file" name="FormFile" accept="image/png, image/jpeg, image/gif" required>
                </div>
                <div class="form-check d-flex justify-content-center">
                    <button type="submit" onclick="matchPassword()" id="RegSub" class="btn btn-primary">Submit</button>                    
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function matchPassword() {
        var pass1 = document.getElementById("Pass");  
        var pass2 = document.getElementById("RepPass");  

        if (pass1.value != pass2.value) {
            document.getElementById("RegSub").disabled = true;
        }
        else {
            document.getElementById("RegSub").disabled = false;
        }
    }
</script>

</body>
</html>